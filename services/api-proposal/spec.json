{
       "servers": {
		"production": "http://localhost:3002/v1"
	},	       
	"headers": {
	},
	"params": {
		"proposal_id": {
			"$id": "params-proposal_id",
			"$ref": "schemas-proposal_id"
		},
		"ballot_id": {
			"$id": "params-ballot_id",
			"$ref": "schemas-ballot_id"
		}
	},
	"queries": {
		"limit": {
			"$id": "queries-limit",
			"type": "integer"
		},
		"last": {
			"$id": "queries-last",
			"type": "string"
		},
		"order": {
			"$id": "queries-order",
			"type": "string",
			"enum": [
				"ASC",
				"DESC"
			]
		},
		"proposal_sort": {
			"$id": "queries-proposal_sort",
			"type": "string",
			"enum": [
				"proposal_name",
				"date_created",
				"date_updated"
			]
		},
		"proposal_order_date": {
			"$id": "queries-proposal_sort_date",
			"type":"object",
			"properties": {
				"limit": { "$ref": "queries-limit" },
				"order": { "$ref": "queries-order" },
				"filter": { "$ref": "queries-proposal_filter" },
				"sort": { 
					"type": "string",
					"enum": [
						"date_created",
						"date_updated"
					]
				},
				"last": { "$ref": "schemas-date" }
			}
		},
		"proposal_order_string": {
			"$id": "queries-proposal_sort_string",
			"type":"object",
			"properties": {
				"limit": { "$ref": "queries-limit" },
				"order": { "$ref": "queries-order" },
				"filter": { "$ref": "queries-proposal_filter" },
				"sort": { 
					"type": "string",
					"enum": [ "proposal_name" ]
				},
				"last": { "type": "string" }
			}
		},
		"ballot_order": {
			"$id": "queries-ballot_order",
			"type": "object",
			"properties": {
				"limit": { "$ref": "queries-limit" },
				"order": { "$ref": "queries-order" },
				"filter": { "$ref": "queries-ballot_filter" },
				"sort": { "$ref": "queries-proposal_sort" },
				"last": { "$ref": "queries-last" }
			}
		},
		"proposal_filter": {
			"$id": "queries-proposal_filter",
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"democracy_id": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							 "$ref": "schemas-op" 
						},
						"val": {
							"$ref": "schemas-democracy_id"
						}
					}
				},
				"membership_id": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op"
						},
						"val": {
							"$ref": "schemas-membership_id"
						}
					}
				},
				"proposal_name": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op"
						},
						"val": {
							"$ref": "schemas-proposal_name"
						}
					}
				},
				"proposal_description": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"type": "string",
							"enum": [
								"~"
							]
						},
						"val": {
							"$ref": "schemas-proposal_description"
						}
					}
				},
				"proposal_target": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op"
						},
						"val": {
							"$ref": "schemas-proposal_target"
						}
					}
				},
				"proposal_votes_yes": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op"
						},
						"val": {
							"type": "integer"
						}
					}
				},
				"proposal_votes_no": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op"
						},
						"val": {
							"type": "integer"
						}
					}
				},
				"proposal_votable": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"type": "string",
							"enum": [ "=" ]
						},
						"val": {
							"type": "boolean"
						}
					}
				},
				"proposal_passed": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"type": "string",
							"enum": [ "=" ]
						},
						"val": {
							"type": "boolean"
						}
					}
				},
				"date_created": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op"
						},
						"val": {
							"$ref": "schemas-date_created"
						}
					}
				},
				"date_updated": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op"
						},
						"val": {
							"$ref": "schemas-date_updated"
						}
					}
				}
			}
		},

		"ballot_sort": {
			"$id": "queries-ballot_sort",
			"type": "object",
			"properties": {
					"limit": { "$ref": "queries-limit" },
					"order": { "$ref": "queries-order" },
					"filter": { "$ref": "queries-ballot_filter" },
					"sort": {
						"type": "string",
						"enum": [
							"date_created",
							"date_updated"
						]
					},
					"last": { "$ref": "schemas-date" }
			}
		},
		"ballot_filter": {
			"$id": "queries-ballot_filter",
			"type": "object",
			"properties": {
				"membership_id": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op"
						},
						"val": {
							"$ref": "schemas-membership_id"
						}
					}
				},
				"ballot_approved": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"type": "string",
							"enum": [
								"="
							]
						},
						"val": {
							"type": "boolean"
						}
					}
				},
				"ballot_comments": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"type": "string",
							"enum": [
								"~"
							]
						},
						"val": {
							"$ref": "schemas-ballot_comments"
						}
					}
				},
				"date_created": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op"
						},
						"val": {
						 "$ref": "schemas-date_created" 
						}
					}
				},
				"date_updated": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"op": {
							"$ref": "schemas-op" 
						},
						"val": {
							"$ref": "schemas-date_updated" 
						}
					}
				}
			}
		}
	}, 
	"bodies": {
		"proposal_create": {
			"$id": "bodies-proposal_create",
			"$ref": "schemas-proposal_create" 
		},
		"ballot_create": { 
			"$id": "bodies-ballot_create",
			"$ref": "schemas-ballot_create"
		},
		"ballot_update": {
			"$id": "bodies-ballot_update",
			"$ref": "schemas-ballot_update"
		}
	},
	"responses": {
		"400": {
			"$id": "responses-400",
			"description": "Bad Request"
		},
		"401": {
			"$id": "responses-401",
			"description": "Unauthorized"
		},
		"500": {
			"$id": "responses-500",
			"description": "Internal Error"
		},
		"proposal_list": {
			"$id": "responses-proposal_list",
			"description": "Successfully return list of proposals",
			"type": "array",
			"items": {
				"$ref": "schemas-proposal_read"
			}
		},
		"proposal_create": {
			"$id": "responses-proposal_create",
			"description": "Successfully created a proposal",
			"$ref": "schemas-proposal_read"
		},
		"proposal_read": {
			"$id": "responses-proposal_read",
			"description": "Successfully fetched a proposal",
			"$ref": "schemas-proposal_read"
		},
		"proposal_close": {
			"$id": "responses-proposal_close",
			"description": "Successfully closed a proposal"
		},
		"proposal_delete": {
			"$id": "responses-proposal_delete",
			"description": "Successfully deleted a proposal"
		},
		"ballot_list": {
			"$id": "responses-ballot_list",
			"description": "Successfully return list of ballots",
			"type": "array",
			"items": {
				"$ref": "schemas-ballot_read"
			}
		},
		"ballot_create": {
			"$id": "responses-ballot_create",
			"description": "Successfully created a ballot",
			"$ref": "schemas-ballot_read"
		},
		"ballot_read": {
			"$id": "responses-ballot_read",
			"description": "Successfully fetched a ballot",
			"$ref": "schemas-ballot_read"
		},
		"ballot_update": {
			"$id": "responses-ballot_update",
			"description": "Successfully updated a ballot",
			"$ref": "schemas-ballot_read"
		},
		"ballot_delete": {
			"$id": "responses-ballot_delete",
			"description": "Successfully deleted a ballot"
		}
	},
	"schemas": {
		"op": {
			"$id": "schemas-op",
			"type": "string",
			"enum": [
				"=",
				"!=",
				">=",
				">",
				"<=",
				"<",
				"IN",
				"NOT IN",
				"BETWEEN",
				"XBETWEEN"
			]
		},
		"uuid": {
			"$id": "schemas-uuid",
			"type": "string",
			"pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
		},
		"date": {
			"$id": "schemas-date",
			"type": "string",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}.[0-9]{3}Z$"
		},
		"date_created": {
			"$id": "schemas-date_created",
			"$ref": "schemas-date"
		},
		"date_updated": {
			"$id": "schemas-date_updated",
			"$ref": "schemas-date"
		},
		"democracy_id": {
			"$id": "schemas-democracy_id",
			"description": "Democracy ID",
			"$ref": "schemas-uuid"
		},
		"membership_id": {
			"$id": "schemas-membership_id",
			"description": "Membership ID",
			"$ref": "schemas-uuid"
		},
		"proposal_id": {
			"$id": "schemas-proposal_id",
			"description": "Proposal ID",
			"$ref": "schemas-uuid"
		},
		"proposal_name": {
			"$id": "schemas-proposal_name",
			"description": "Proposal name",
			"type": "string"
		},
		"proposal_description": {
			"$id": "schemas-proposal_description",
			"description": "Proposal description",
			"type": "string"
		},
		"proposal_target": {
			"$id": "schemas-proposal_target",
			"description": "Proposal target",
			"type": "string"
		},
		"proposal_votable": {
			"$id": "schemas-proposal_votable",
			"description": "Proposal is votable",
			"type": "string"
		},
		"proposal_votes": {
			"$id": "schemas-proposal_votes",
			"description": "Proposal votes",
			"type": "object",
			"properties": {
				"yes": {
					"type": "integer"
				},
				"no": {
					"type": "integer"
				}
			}
		},
		"proposal_changes": {
			"$id": "schemas-proposal_changes",
			"description": "Proposal changes",
			"type": "object",
			"properties": {
				"_add": {
					"type": "object",
					"patternProperties": {
						".*": {
							"oneOf": [
								{ "type": "string"},
								{ "type": "integer"}
							]
						}
					}
				},
				"_update": {
					"type": "object",
					"patternProperties": {
						".*": {
							"oneOf": [
								{ "type": "string"},
								{ "type": "integer"}
							]
						}
					}
				},
				"_delete": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			},
			"additionalProperties": { "$ref": "schemas-proposal_changes" }
		},
		"proposal_read": {
			"$id": "schemas-proposal_read",
			"description": "Proposal - Read",
			"type": "object",
			"required": [
				"proposal_id",
				"democracy_id",
				"membership_id",
				"proposal_name",
				"proposal_description",
				"proposal_target",
				"proposal_changes",
				"proposal_votable",
				"proposal_passed",
				"date_created",
				"date_updated"
			],
			"properties": {
				"proposal_id": {
					"$ref": "schemas-proposal_id"
				},
				"democracy_id": {
					"$ref": "schemas-democracy_id"
				},
				"membership_id": {
					"$ref": "schemas-membership_id"
				},
				"proposal_name": {
					"$ref": "schemas-proposal_name"
				},
				"proposal_description": {
					"$ref": "schemas-proposal_description"
				},
				"proposal_target": {
					"$ref": "schemas-proposal_target"
				},
				"proposal_changes": {
					"$ref": "schemas-proposal_changes"
				},
				"proposal_votes": {
					"$ref": "schemas-proposal_votes"
				},
				"proposal_votable": {
					"$ref": "schemas-proposal_votable"
				},
				"proposal_passed": {
					"$ref": "schemas-proposal_passed"
				},
				"date_created": {
					"$ref": "schemas-date_created"
				},
				"date_updated": {
					"$ref": "schemas-date_updated"
				}
			}
		},
		"proposal_create": {
			"$id": "schemas-proposal_create",
			"description": "Proposal - Create",
			"type": "object",
			"required": [
				"democracy_id",
				"membership_id",
				"proposal_name",
				"proposal_description",
				"proposal_target",
				"proposal_changes"
			],
			"properties": {
				"democracy_id": {
					"$ref": "schemas-democracy_id"
				},
				"membership_id": {
					"$ref": "schemas-membership_id"
				},
				"proposal_name": {
					"$ref": "schemas-proposal_name"
				},
				"proposal_description": {
					"$ref": "schemas-proposal_description"
				},
				"proposal_target": {
					"$ref": "schemas-proposal_target"
				},
				"proposal_changes": {
					"$ref": "schemas-proposal_changes"
				}
			},
			"additionalProperties": false
		},
		"ballot_id": {
			"$id": "schemas-ballot_id",
			"description": "Ballot ID",
			"$ref": "schemas-uuid"
		},
		"membership_id": {
			"$id": "schemas-membership_id",
			"description": "Membership ID",
			"$ref": "schemas-uuid"
		},
		"ballot_approved": {
			"$id": "schemas-ballot_approved",
			"description": "Do you approve the proposal?",
			"type": "boolean"
		},
		"ballot_comments": {
			"$id": "schemas-ballot_comments",
			"description": "Ballot comments",
			"type": "string"
		},
		"ballot_modifiable": {
			"$id": "schemas-ballot_modifiable",
			"description": "Can the ballot be updated?",
			"type": "boolean"
		},
		"ballot_read": {
			"$id": "schemas-ballot_read",
			"description": "Ballot - Read",
			"type": "object",
			"required": [
				"ballot_id",
				"proposal_id",
				"membership_id",
				"ballot_approved",
				"ballot_comments",
				"ballot_modifiable",
				"date_created",
				"date_updated"
			],
			"properties": {
				"ballot_id": {
					"$ref": "schemas-ballot_id"
				},
				"proposal_id": {
					"$ref": "schemas-proposal_id"
				},
				"membership_id": {
					"$ref": "schemas-membership_id"
				},
				"ballot_approved": {
					"$ref": "schemas-ballot_approved"
				},
				"ballot_comments": {
					"$ref": "schemas-ballot_comments"
				},
				"ballot_modifiable": {
					"$ref": "schemas-ballot_modifiable"
				},
				"date_created": {
					"$ref": "schemas-date_created"
				},
				"date_updated": {
					"$ref": "schemas-date_updated"
				}
			}
		},
		"ballot_create": {
			"$id": "schemas-ballot_create",
			"description": "Ballot - Create",
			"type": "object",
			"required": [
				"membership_id",
				"ballot_approved"
			],
			"additionalProperties": false,
			"properties": {
				"membership_id": {
					"$ref":"schemas-membership_id"
				},
				"ballot_approved": {
					"$ref": "schemas-ballot_approved"
				},
				"ballot_comments": {
					"$ref": "schemas-ballot_comments"
				}
			}
		},
		"ballot_update": {
			"$id": "schemas-ballot_update",
			"description": "Ballot - Update",
			"type": "object",
			"required": [
				"membership_id",
				"ballot_approved"
			],
			"properties": {
				"membership_id": {
					"$ref": "schemas-membership_id"
				},
				"ballot_approved": {
					"$ref": "schemas-ballot_approved"
				},
				"ballot_comments": {
					"$ref": "schemas-ballot_comments"
				}
			}
		}
	},
	"routes": {
		"/proposal": {
			"GET": {
				"description": "List proposals",
				"operationId": "proposal_list",
				"query": {
					"anyOf": [
						{ "$ref": "queries-proposal_sort_string" },
						{ "$ref": "queries-proposal_sort_date" }
					]
				},
				"response": {
					"200": {
						"$ref": "responses-proposal_list"
					},
					"400": {
					        "$ref": "responses-400"
					},
					"401": {
					        "$ref": "responses-401"
					},
					"500": {
					        "$ref": "responses-500"
					}
				}
			},
			"POST": {
				"description": "Create a proposal",
				"operationId": "proposal_create",
				"body": {
					"$ref": "bodies-proposal_create"
				},
				"response": {
					"201": {
						"$ref": "responses-proposal_create"
					},
					"400": {
					        "$ref": "responses-400"
					},
					"401": {
					        "$ref": "responses-401"
					},
					"500": {
					        "$ref": "responses-500"
					}
				}
			}
		},
		"/proposal/:proposal_id": {
			"GET": {
				"description": "Read a proposal",
				"operationId": "proposal_read",
				"param": { 
					"proposal_id": { "$ref": "params-proposal_id" }
				},
				"response": {
					"200": {
						"$ref": "responses-proposal_read"
					},
					"400": {
					        "$ref": "responses-400"
					},
					"401": {
					        "$ref": "responses-401"
					},
					"500": {
					        "$ref": "responses-500"
					}
				}
			},
			"POST": {
				"description": "Close a proposal",
				"operationId": "proposal_close",
				"param": { 
					"proposal_id": { "$ref": "params-proposal_id" }
				},
				"response": {
					"200": {
						"$ref": "responses-proposal_close"
					},
					"400": {
					        "$ref": "responses-400"
					},
					"401": {
					        "$ref": "responses-401"
					},
					"500": {
					        "$ref": "responses-500"
					}
				}
			},
			"DELETE": {
				"description": "Delete a proposal",
				"operationId": "proposal_delete",
				"param": { 
					"proposal_id": { "$ref": "params-proposal_id" }
				},
				"response": {
					"204": {
						"$ref": "responses-proposal_delete"
					},
					"400": {
					        "$ref": "responses-400"
					},
					"401": {
					        "$ref": "responses-401"
					},
					"500": {
					        "$ref": "responses-500"
					}
				}
			}
		},
		"/proposal/:proposal_id/ballot": {
